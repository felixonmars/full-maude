 mod EXCLUSIVE-OR is 
    sorts Nat NatSet .
    op 0 : -> Nat [ctor] .
    op s : Nat -> Nat [ctor] .
    
    subsort Nat < NatSet .
    op _*_ : NatSet NatSet -> NatSet [ctor assoc comm] .

    vars X Y Z : [NatSet] .
    eq [idem]     : X * X = 0     [variant] .
    eq [idem-Coh] : X * X * Z = Z [variant] .
    eq [id]       : X * 0 = X     [variant] .
  endm

