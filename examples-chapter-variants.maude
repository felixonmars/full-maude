fmod ABELIAN-GROUP is
  --- Sort Information 
       sorts Element  .

  --- Abelian Group Function Symbols
       op _+_ : Element Element -> Element  [comm assoc prec 30] .
       op -_ : Element -> Element  [prec 20] .
       op 0 : ->  Element .

       vars X Y Z : Element  .
 
 --- Abelian Group Axioms
       eq X + 0 = X [variant] .
       eq X + - X = 0 [variant] .
       eq X + - X + Y = Y [variant] .
       eq - - X = X [variant] .
       eq - 0 = 0 [variant] .
       eq - X + - Y = -(X + Y) [variant] .
       eq -(X + Y) + Y = - X [variant] .
       eq -(- X + Y) = X + - Y [variant] .
       eq - X + - Y + Z  = -(X + Y) + Z [variant] .
       eq -(X + Y) + Y + Z = - X + Z [variant] .
endfm

